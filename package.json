{
  "name": "dostanesie-pl-widget",
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "postinstall": "tsx src/utils/fetchSubjectsCli/index.ts",
    "widget:dev": "vite --host",
    "widget:dev:wordpress": "vite build --watch --mode wordpress",
    "widget:build:lib": "tsc --noEmit && vite build --mode lib",
    "widget:build:static": "tsc --noEmit && vite build --mode static",
    "widget:build:wordpress": "tsc --noEmit && vite build --mode wordpress",
    "widget:preview": "pnpm build:static && vite preview --mode static --host",
    "fmt": "prettier --write src/* tmp/plugin/*",
    "fmt:staged": "lint-staged --no-stash",
    "prepare": "husky"
  },
  "dependencies": {
    "@babel/plugin-transform-react-jsx": "7.25.9",
    "@chakra-ui/react": "3.16.1",
    "@emotion/cache": "11.14.0",
    "@emotion/react": "11.14.0",
    "@fontsource-variable/montserrat": "5.2.5",
    "@prettier/plugin-php": "0.22.4",
    "@types/node": "22.15.2",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "@vitejs/plugin-react": "4.4.1",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "next-themes": "0.4.6",
    "prettier": "3.5.3",
    "prettier-plugin-organize-imports": "4.1.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.56.1",
    "react-icons": "5.5.0",
    "react-shadow": "20.6.0",
    "tsx": "4.19.3",
    "typescript": "5.8.3",
    "valibot": "1.0.0",
    "vite": "6.3.3",
    "vite-plugin-clean": "2.0.1",
    "vite-plugin-static-copy": "2.3.1",
    "vite-svg-loader": "5.1.0",
    "vite-tsconfig-paths": "5.1.4",
    "wretch": "2.11.0"
  },
  "lint-staged": {
    "*.{ts,tsx,html,css,php,md}": "prettier --write"
  }
}
